{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "paths": {
      "@ui/*": ["src/ui/*"],
      "@domain/*": ["src/domain/*"],
      "@lib/*": ["src/lib/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "e2e/config.js"
  ]
}
